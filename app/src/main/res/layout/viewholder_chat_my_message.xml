<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_my_message_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_my_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/baloon_my"
        android:textSize="18sp"
        android:textColor="@color/white"
        tools:text="테스트메세지테스트메세지테스트메세지테스트메세지테스트메세지"
        />

    <TextView
        android:id="@+id/tv_my_message_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_my_message_text"
        android:layout_alignBottom="@+id/tv_my_message_text"
        android:layout_marginRight="8dp"
        android:textSize="10sp"
        android:textColor="@color/gray"
        tools:text="오후 03:30"
        />

</RelativeLayout>