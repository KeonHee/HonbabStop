<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/iv_title_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />

    <RelativeLayout
        android:id="@+id/layout_room_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_title_image"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            tools:text="1시 강남역 김밥카페"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/tv_max_people_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_title"
            android:text="@string/member_count_label"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            />

        <TextView
            android:id="@+id/tv_max_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_max_people_label"
            tools:text="1/4"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_room_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        />

    <TextView
        android:id="@+id/tv_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_room_detail"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        tools:text="1/4"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray"
        />
</RelativeLayout>